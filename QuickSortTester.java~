public class QuickSortTester {

    public static long timer(int lengthArr, int numRuns) {
	int totalTime = 0;

	for (int i = 0; i < numRuns; i++) {
	    int[] arr = QuickSort.buildArray(lengthArr, lengthArr);

	    int startTime = System.nanoTime();
	    QuickSort.qsort(arr);
	    int endTime = System.nanoTime();

	    totalTime += endTime - startTime;   

	}

	return totalTime / numRuns;
    }

    public static void main(String[] args) {
	System.out.println("n = 100: " + timer(100, 10));
	System.out.println("n = 100: " + timer(1000, 10));
	System.out.println("n = 100: " + timer(10000, 10));
	System.out.println("n = 100: " + timer(100000, 10));
    }

} 
